{
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss",
        "SingleLine":  true
      },
      "LogLevel": {
        "Default": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "PulseGeneratorSettings": {
    "RemoteClockTimeHref": "https://fastclock.azurewebsites.net/api/clocks/demo/time?user=Development%20Clocks",
    "PollIntervalSeconds": 2,
    "SessionEndedIndicationSeconds": 5,
    "AnalogueClockStartTime": "06:00",
    "FastForwardIntervalMilliseconds": 1500,
    "PulseDurationMilliseconds": 1000,
    "Use12HourClock": true,
    "FlipPolarity": false,
    "UdpBroadcast": {
      "IPAddress": "255.255.255.255",
      "PortNumber": 25501,
      "Disabled": true
    },
    "SerialPulseSink": {
      "PortName": "COM3",
      "DtrOnly": false,
      "Disabled": true
    },
    "RpiRelayBoardPulseSink": {
      "Disabled": true
    }
  }
}
